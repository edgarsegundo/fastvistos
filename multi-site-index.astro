---
// Multi-site home page
import BaseLayout from '../multi-sites/core/layouts/BaseLayout.astro';
import { getCurrentSite } from '../multi-sites/core/lib/site-manager.js';
import { getTopicsWithArticles } from '../multi-sites/core/lib/multi-blog-service.js';

// Get current site configuration
const site = getCurrentSite();

// Initialize site context
import '../multi-sites/core/lib/site-manager.js';

// Get site-specific configuration
let siteConfig;
try {
  if (site.id === 'fastvistos') {
    const { HOME_CONFIG } = await import('../multi-sites/sites/fastvistos/config.js');
    siteConfig = HOME_CONFIG;
  } else if (site.id === 'conceptvistos') {
    const { HOME_CONFIG } = await import('../multi-sites/sites/conceptvistos/config.js');
    siteConfig = HOME_CONFIG;
  } else if (site.id === 'vibecode') {
    const { HOME_CONFIG } = await import('../multi-sites/sites/vibecode/config.js');
    siteConfig = HOME_CONFIG;
  }
} catch (error) {
  console.error('Error loading site config:', error);
  // Fallback configuration
  siteConfig = {
    hero: {
      title: site.name,
      subtitle: site.description,
      ctaText: 'Saiba Mais',
      ctaLink: '#contato'
    },
    services: [],
    testimonials: [],
    faq: []
  };
}

// Get blog content if blog feature is enabled
const blogTopics = site.features.blog ? await getTopicsWithArticles(3) : [];
---

<BaseLayout
  title={siteConfig.hero.title}
  description={siteConfig.hero.subtitle}
>
  <!-- Hero Section -->
  <section class="site-gradient text-white py-20 lg:py-32">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl lg:text-6xl font-bold mb-6 leading-tight">
          {siteConfig.hero.title}
        </h1>
        <p class="text-xl lg:text-2xl mb-8 opacity-90 leading-relaxed">
          {siteConfig.hero.subtitle}
        </p>
        <div class="space-x-4">
          <a
            href={siteConfig.hero.ctaLink}
            class="inline-block bg-white text-gray-800 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg"
            style={`color: ${site.primaryColor};`}
          >
            {siteConfig.hero.ctaText}
          </a>
          <a
            href={`https://wa.me/${site.whatsapp.replace(/\D/g, '')}`}
            class="inline-block border-2 border-white text-white font-bold py-4 px-8 rounded-lg hover:bg-white hover:text-gray-800 transition-all duration-300"
          >
            Falar no WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  {siteConfig.services && siteConfig.services.length > 0 && (
    <section id="servicos" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold mb-4 site-primary-text">
            {site.id === 'vibecode' ? 'Nossos Serviços' : 'Nossos Serviços'}
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            {site.id === 'fastvistos' && 'Soluções completas para obtenção do seu visto americano'}
            {site.id === 'conceptvistos' && 'Consultoria premium e personalizada para vistos internacionais'}
            {site.id === 'vibecode' && 'Desenvolvimento de software e consultoria tecnológica de alta qualidade'}
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {siteConfig.services.map((service) => (
            <div class="bg-white rounded-lg shadow-lg p-8 hover:shadow-xl transition-shadow duration-300">
              <div class="text-4xl mb-4">{service.icon}</div>
              <h3 class="text-xl font-bold mb-3 site-primary-text">{service.title}</h3>
              <p class="text-gray-600 mb-4">{service.description}</p>
              <div class="mb-4">
                <span class="text-2xl font-bold site-primary-text">{service.price}</span>
              </div>
              <ul class="space-y-2">
                {service.features.map((feature) => (
                  <li class="flex items-center text-sm text-gray-600">
                    <svg class="w-4 h-4 mr-2 site-primary-text" fill="currentColor" viewBox="0 0 20 20">
                      <path fillRule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clipRule="evenodd"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Technologies Section (VibeCode only) -->
  {site.id === 'vibecode' && siteConfig.technologies && (
    <section id="tecnologias" class="py-20">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold mb-4 site-primary-text">
            Tecnologias que Utilizamos
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Trabalhamos com as tecnologias mais modernas e confiáveis do mercado
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
          {siteConfig.technologies.map((tech) => (
            <div class="text-center p-6 bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
              <div class="text-4xl mb-3">{tech.icon}</div>
              <h3 class="font-bold text-gray-800 mb-2">{tech.name}</h3>
              <p class="text-sm text-gray-600">{tech.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Blog Section -->
  {site.features.blog && blogTopics.length > 0 && (
    <section id="blog" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold mb-4 site-primary-text">
            Blog
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Confira nossos artigos mais recentes
          </p>
        </div>
        
        <div class="space-y-12">
          {blogTopics.map((topic) => topic.articles.length > 0 && (
            <div>
              <h3 class="text-2xl font-bold mb-6 site-primary-text">{topic.name}</h3>
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {topic.articles.slice(0, 3).map((article) => (
                  <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <img
                      src={article.featured_image}
                      alt={article.title}
                      class="w-full h-48 object-cover"
                    />
                    <div class="p-6">
                      <div class="text-sm site-primary-text font-medium mb-2">
                        {topic.name}
                      </div>
                      <h3 class="text-lg font-bold mb-3 text-gray-800 line-clamp-2">
                        {article.title}
                      </h3>
                      <p class="text-gray-600 text-sm mb-4 line-clamp-3">
                        {article.excerpt}
                      </p>
                      <a
                        href={`/blog/${article.slug}`}
                        class="site-primary-text font-medium hover:underline"
                      >
                        Ler mais →
                      </a>
                    </div>
                  </article>
                ))}
              </div>
            </div>
          ))}
        </div>
        
        <div class="text-center mt-12">
          <a
            href="/blog"
            class="inline-block site-primary-bg text-white font-bold py-3 px-8 rounded-lg hover:opacity-90 transition-opacity duration-300"
          >
            Ver Todos os Artigos
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Testimonials Section -->
  {siteConfig.testimonials && siteConfig.testimonials.length > 0 && (
    <section id="depoimentos" class="py-20">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold mb-4 site-primary-text">
            O que nossos clientes dizem
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Depoimentos reais de clientes satisfeitos
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto">
          {siteConfig.testimonials.map((testimonial) => (
            <div class="bg-white rounded-lg shadow-lg p-8">
              <div class="flex items-center mb-4">
                {[...Array(testimonial.rating)].map((_, i) => (
                  <svg key={i} class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
                  </svg>
                ))}
              </div>
              <p class="text-gray-600 mb-6 italic">"{testimonial.content}"</p>
              <div class="flex items-center">
                <img
                  src={testimonial.image}
                  alt={testimonial.name}
                  class="w-12 h-12 rounded-full mr-4"
                  onerror="this.src='/assets/images/testimonials/default-avatar.jpg'"
                />
                <div>
                  <div class="font-bold text-gray-800">{testimonial.name}</div>
                  <div class="text-sm text-gray-600">{testimonial.role}</div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- FAQ Section -->
  {siteConfig.faq && siteConfig.faq.length > 0 && (
    <section id="faq" class="py-20 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold mb-4 site-primary-text">
            Perguntas Frequentes
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            Tire suas dúvidas principais
          </p>
        </div>
        
        <div class="max-w-3xl mx-auto space-y-6">
          {siteConfig.faq.map((item, index) => (
            <div class="bg-white rounded-lg shadow-md">
              <button
                class="w-full text-left p-6 focus:outline-none"
                onclick={`document.getElementById('faq-${index}').classList.toggle('hidden')`}
              >
                <div class="flex justify-between items-center">
                  <h3 class="text-lg font-semibold text-gray-800">{item.question}</h3>
                  <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
              </button>
              <div id={`faq-${index}`} class="hidden px-6 pb-6">
                <p class="text-gray-600">{item.answer}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Contact Section -->
  <section id="contato" class="py-20 site-gradient text-white">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl lg:text-4xl font-bold mb-6">
          {site.id === 'fastvistos' && 'Pronto para conseguir seu visto?'}
          {site.id === 'conceptvistos' && 'Quer uma consultoria premium?'}
          {site.id === 'vibecode' && 'Vamos tirar seu projeto do papel?'}
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Entre em contato conosco e comece sua jornada agora mesmo
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
          <div class="text-center">
            <div class="bg-white bg-opacity-20 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">Email</h3>
            <p class="opacity-90">{site.contactEmail}</p>
          </div>
          
          <div class="text-center">
            <div class="bg-white bg-opacity-20 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 20 20">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">Telefone</h3>
            <p class="opacity-90">{site.phone}</p>
          </div>
          
          <div class="text-center">
            <div class="bg-white bg-opacity-20 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
              </svg>
            </div>
            <h3 class="text-lg font-bold mb-2">WhatsApp</h3>
            <p class="opacity-90">{site.whatsapp}</p>
          </div>
        </div>
        
        <a
          href={`https://wa.me/${site.whatsapp.replace(/\D/g, '')}`}
          class="inline-block bg-white text-gray-800 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-all duration-300 transform hover:scale-105 shadow-lg"
          style={`color: ${site.primaryColor};`}
        >
          Falar no WhatsApp Agora
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>

<script>
  // FAQ toggle functionality
  document.addEventListener('DOMContentLoaded', function() {
    const faqButtons = document.querySelectorAll('[onclick*="faq-"]');
    faqButtons.forEach(button => {
      button.addEventListener('click', function() {
        const targetId = this.getAttribute('onclick').match(/faq-\d+/)[0];
        const target = document.getElementById(targetId);
        if (target) {
          target.classList.toggle('hidden');
          
          // Rotate the arrow icon
          const arrow = this.querySelector('svg');
          if (arrow) {
            arrow.style.transform = target.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
          }
        }
      });
    });
  });
</script>
