---
// JsonLdBreadcrumb.astro - Structured data for BreadcrumbList schema
export interface Props {
    items: Array<{
        name: string;
        url: string;
    }>;
}

const { items } = Astro.props;

const schema = {
    '@context': 'https://schema.org',
    '@type': 'BreadcrumbList',
    itemListElement: items.map((item, index) => ({
        '@type': 'ListItem',
        position: index + 1,
        name: item.name,
        item: item.url,
    })),
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
