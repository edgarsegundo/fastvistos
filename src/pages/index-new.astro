---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
import HeroSection from '../components/HeroSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import AboutSection from '../components/AboutSection.astro';
import PassportSection from '../components/PassportSection.astro';
import CarouselSection from '../components/CarouselSection.astro';
import FaqSection from '../components/FaqSection.astro';
import CallToActionSection from '../components/CallToActionSection.astro';
import FooterSection from '../components/FooterSection.astro';
import Whatsapp from '../components/Whatsapp.astro';
import JsonLdWebPage from '../components/JsonLdWebPage.astro';
import JsonLdOrganization from '../components/JsonLdOrganization.astro';
import JsonLdLocalBusiness from '../components/JsonLdLocalBusiness.astro';
import JsonLdService from '../components/JsonLdService.astro';
import JsonLdFAQ from '../components/JsonLdFAQ.astro';
import MetaTags from '../components/MetaTags.astro';
import { homePageSEO } from '../config/pages/index';

export interface Props {
    title?: string;
    description?: string;
}

const { title = homePageSEO.meta.title, description = homePageSEO.meta.description } = Astro.props;
---

<BaseLayout title={title} description={description} bodyClass="home-layout">
    <Fragment slot="head">
        <!-- SEO Meta Tags -->
        <MetaTags seoConfig={homePageSEO} />

        <!-- JSON-LD Structured Data for SEO -->
        <JsonLdWebPage seoConfig={homePageSEO} />
        <JsonLdOrganization seoConfig={homePageSEO} />
        <JsonLdLocalBusiness seoConfig={homePageSEO} />
        <JsonLdService
            name="Processamento de Vistos Americanos"
            description="Serviço completo de assessoria para obtenção de vistos americanos B1/B2, eTA do Canadá e vistos mexicanos"
        />
        <JsonLdFAQ />

        <!-- Custom Styles for Home Page -->
        <style></style>
    </Fragment>

    <Navigation />

    <HeroSection />
    <ServicesSection />
    <AboutSection />
    <PassportSection />
    <CarouselSection />
    <FaqSection />
    <CallToActionSection />
    <FooterSection />

    <Whatsapp />

    <main class="home-main">
        <slot />
    </main>
</BaseLayout>

<style is:global>
    p,
    h3,
    ul,
    a,
    span {
        color: #1b375c !important;
    }
</style>
