---
// FastVistos main homepage - using src components
import SimpleBaseLayout from '../layouts/SimpleBaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import AboutSection from '../components/AboutSection.astro';
import PassportSection from '../components/PassportSection.astro';
import CarouselSection from '../components/CarouselSection.astro';
import FaqSection from '../components/FaqSection.astro';
import CallToActionSection from '../components/CallToActionSection.astro';
---

<SimpleBaseLayout 
  title="FastVistos - Especialistas em Vistos Americanos" 
  description="Assessoria completa para vistos americanos B1/B2, eTA do Canadá e vistos mexicanos. Aprovação garantida com nossa equipe especializada."
  bodyClass="home-layout"
>
  <!-- FastVistos Main Content -->
  <HeroSection />
  <ServicesSection />
  <AboutSection />
  <PassportSection />
  <CarouselSection />
  <FaqSection />
  <CallToActionSection />
</SimpleBaseLayout>

<style is:global>
  .home-layout p,
  .home-layout h3,
  .home-layout ul,
  .home-layout a,
  .home-layout span {
    color: #1b375c !important;
  }
  
  .home-main {
    min-height: 100vh;
  }
</style>