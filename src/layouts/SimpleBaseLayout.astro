---
// Simple BaseLayout for testing FastVistos components
export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
  canonicalUrl?: string;
  structuredData?: any;
  bodyClass?: string;
}

const {
  title = "FastVistos - Especialistas em Vistos Americanos",
  description = "Assessoria completa para vistos americanos B1/B2, eTA do Canadá e vistos mexicanos. Aprovação garantida com nossa equipe especializada.",
  keywords = "visto americano, assessoria visa, consultoria visto, B1 B2, eTA Canada",
  ogImage = "/logo.png",
  ogType = 'website',
  noindex = false,
  canonicalUrl,
  structuredData,
  bodyClass = ''
} = Astro.props;

const currentUrl = canonicalUrl || Astro.url.href;
const siteUrl = "https://fastvistos.com.br";
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Primary Meta Tags -->
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  {keywords && <meta name="keywords" content={keywords} />}
  
  <!-- Canonical URL -->
  <link rel="canonical" href={currentUrl} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={ogType} />
  <meta property="og:url" content={currentUrl} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:site_name" content="FastVistos" />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={currentUrl} />
  <meta property="twitter:title" content={title} />
  <meta property="twitter:description" content={description} />
  <meta property="twitter:image" content={ogImage} />
  
  <!-- Favicon -->
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  
  <!-- Robot Meta -->
  {noindex && <meta name="robots" content="noindex, nofollow" />}
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet" />
  
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  
  <!-- Custom CSS Variables -->
  <style>
    :root {
      --primary-color: #FF6B35;
      --secondary-color: #1E3A8A;
      --accent-color: #10B981;
      --text-primary: #1F2937;
      --text-secondary: #6B7280;
      --background: #FFFFFF;
      --background-alt: #F9FAFB;
    }
    
    body {
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      color: var(--text-primary);
      background: var(--background);
    }
    
    .site-primary-bg { background-color: var(--primary-color); }
    .site-primary-text { color: var(--primary-color); }
    .site-secondary-bg { background-color: var(--secondary-color); }
    .site-secondary-text { color: var(--secondary-color); }
    .site-gradient { 
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%); 
    }
  </style>
  
  {structuredData && (
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  )}
</head>
<body class={`${bodyClass} antialiased`}>
  <!-- Navigation would go here -->
  <nav class="bg-white shadow-sm border-b border-gray-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex-shrink-0">
          <h1 class="text-xl font-bold text-primary">FastVistos</h1>
        </div>
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-4">
            <a href="/" class="text-gray-600 hover:text-primary px-3 py-2 text-sm font-medium">Início</a>
            <a href="/blog" class="text-gray-600 hover:text-primary px-3 py-2 text-sm font-medium">Blog</a>
            <a href="#contato" class="bg-primary text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-opacity-90">Contato</a>
          </div>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main content -->
  <main>
    <slot />
  </main>

  <!-- Footer would go here -->
  <footer class="bg-gray-900 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="text-2xl font-bold mb-4">FastVistos</h3>
      <p class="text-gray-400 mb-6">Especialistas em Vistos Americanos</p>
      <div class="flex justify-center space-x-6">
        <a href="https://wa.me/5511999999999" class="text-gray-400 hover:text-white">WhatsApp</a>
        <a href="/blog" class="text-gray-400 hover:text-white">Blog</a>
      </div>
      <div class="mt-8 pt-8 border-t border-gray-800">
        <p class="text-gray-500 text-sm">© 2024 FastVistos. Todos os direitos reservados.</p>
      </div>
    </div>
  </footer>
</body>
</html>
