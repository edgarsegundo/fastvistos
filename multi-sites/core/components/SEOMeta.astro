-->
{
    seo.msTileColor ? (
        <meta name="msapplication-TileColor" content={seo.msTileColor} />
    ) : siteConfig.site.primaryColor ? (
        <meta name="msapplication-TileColor" content={siteConfig.site.primaryColor} />
    ) : null
}

<!--
