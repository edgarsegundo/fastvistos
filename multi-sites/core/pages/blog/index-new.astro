---
const blogServiceModule = await import('../../lib/multi-blog-service.js');
const BlogService = blogServiceModule.BlogService;
import { getSiteConfig } from '../../lib/site-config.js';

// Get site configuration
const siteConfig = getSiteConfig();
const siteId = import.meta.env.SITE_ID || 'fastvistos';

// Get blog configuration and articles
const blogConfig = await BlogService.getBlogConfig();
const articles = await BlogService.getArticles(siteId, 10);
const featuredArticles = await BlogService.getFeaturedArticles(siteId, 3);
const topics = await BlogService.getTopics();

const title = `${blogConfig.title} - ${siteConfig.name}`;
const description = siteConfig.blogDescription;
---

<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
</head>
<body class="blog-page">
  <!-- Simple Navigation -->
  <nav class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between h-16">
        <div class="flex items-center">
          <a href="/" class="text-xl font-bold" style={`color: ${siteConfig.brandColor};`}>
            {siteConfig.name}
          </a>
        </div>
        <div class="flex items-center space-x-8">
          <a href="/" class={`text-gray-600 transition-colors ${siteConfig.linkColor}`}>Home</a>
          <a href="/blog" class={`text-gray-600 transition-colors ${siteConfig.linkColor}`}>Blog</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Hero Section -->
  <section class={`bg-gradient-to-br ${siteConfig.gradientFrom} ${siteConfig.gradientTo} text-white py-16`}>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          {siteConfig.blogTitle}
        </h1>
        <p class={`text-xl ${siteConfig.accentColor} max-w-3xl mx-auto`}>
          {siteConfig.blogSubtitle}
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Articles -->
  {featuredArticles.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl font-bold text-gray-900 mb-8 text-center">
          Artigos em Destaque
        </h2>
        <div class="grid md:grid-cols-3 gap-8">
          {featuredArticles.map((article: any) => (
            <article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="p-6">
                <div class="flex items-center text-sm text-gray-500 mb-2">
                  <time datetime={article.publishedAt}>
                    {BlogService.formatDate(article.publishedAt)}
                  </time>
                </div>
                <h3 class="text-xl font-semibold text-gray-900 mb-3">
                  <a href={`/blog/${article.slug}`} class={`transition-colors ${siteConfig.linkColor}`}>
                    {article.title}
                  </a>
                </h3>
                <p class="text-gray-600 mb-4">
                  {article.excerpt}
                </p>
                <div class="flex items-center justify-between">
                  <div class="flex flex-wrap gap-2">
                    {article.topics.map((topic: any) => (
                      <span class={`inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium ${siteConfig.tagColor}`}>
                        {topic}
                      </span>
                    ))}
                  </div>
                  <a 
                    href={`/blog/${article.slug}`}
                    class={`font-medium text-sm ${siteConfig.linkColor}`}
                  >
                    Ler mais →
                  </a>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Topics Filter -->
  <section class="py-8 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center gap-4">
        <a 
          href="/blog" 
          class={`inline-flex items-center px-4 py-2 rounded-full text-sm font-medium text-white transition-colors ${siteConfig.buttonColor}`}
        >
          Todos os Artigos
        </a>
        {topics.map((topic: any) => (
          <a 
            href={`/blog/topic/${topic.id}`}
            class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200 transition-colors"
          >
            {topic.name}
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- All Articles -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-gray-900 mb-8">
        Todos os Artigos
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {articles.map((article: any) => (
          <article class="bg-white rounded-lg border border-gray-200 overflow-hidden hover:shadow-md transition-shadow">
            <div class="p-6">
              <div class="flex items-center text-sm text-gray-500 mb-2">
                <time datetime={article.publishedAt}>
                  {BlogService.formatDate(article.publishedAt)}
                </time>
                <span class="mx-2">•</span>
                <span>{article.author}</span>
              </div>
              <h3 class="text-lg font-semibold text-gray-900 mb-3">
                <a href={`/blog/${article.slug}`} class={`transition-colors ${siteConfig.linkColor}`}>
                  {article.title}
                </a>
              </h3>
              <p class="text-gray-600 mb-4 text-sm">
                {article.excerpt}
              </p>
              <div class="flex items-center justify-between">
                <div class="flex flex-wrap gap-1">
                  {article.topics.slice(0, 2).map((topic: any) => (
                    <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-600">
                      {topic}
                    </span>
                  ))}
                </div>
                <a 
                  href={`/blog/${article.slug}`}
                  class={`font-medium text-sm ${siteConfig.linkColor}`}
                >
                  Ler mais →
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class={`py-16 bg-gradient-to-br ${siteConfig.gradientFrom} ${siteConfig.gradientTo}`}>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        {siteConfig.ctaTitle}
      </h2>
      <p class={`text-xl ${siteConfig.accentColor} mb-8 max-w-2xl mx-auto`}>
        {siteConfig.ctaSubtitle}
      </p>
      <a 
        href="/#contato"
        class="inline-flex items-center px-8 py-3 border-2 border-white text-white font-bold rounded-lg hover:bg-white transition-all duration-300"
        style={`hover-color: ${siteConfig.brandColor};`}
      >
        {siteConfig.ctaButton}
      </a>
    </div>
  </section>

  <!-- Simple Footer -->
  <footer class="bg-gray-50 border-t">
    <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
      <div class="text-center">
        <p class="text-gray-500">© {siteConfig.year} {siteConfig.name}. Todos os direitos reservados.</p>
      </div>
    </div>
  </footer>
</body>
</html>
