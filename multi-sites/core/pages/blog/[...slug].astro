---
// Shared blog article page for all sites
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCurrentSite } from '../../lib/site-manager.js';
import { getArticleBySlug, getPublishedArticles } from '../../lib/multi-blog-service.js';
import JsonLdArticle from '../../components/JsonLdArticle.astro';
import JsonLdBreadcrumb from '../../components/JsonLdBreadcrumb.astro';

export async function getStaticPaths() {
  const articles = await getPublishedArticles();
  
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article }
  }));
}

const { slug } = Astro.params;
const article = await getArticleBySlug(slug as string);

if (!article) {
  return Astro.redirect('/blog');
}

// Get current site configuration
const site = getCurrentSite();

// Generate breadcrumb data
const breadcrumbItems = [
  { name: 'Home', url: '/' },
  { name: 'Blog', url: '/blog' },
  { name: article.title, url: `/blog/${article.slug}` }
];

// Format publish date
const publishDate = new Intl.DateTimeFormat('pt-BR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(new Date(article.published));
---

<BaseLayout
  title={article.metatitle || article.title}
  description={article.excerpt}
  ogType="article"
  canonicalUrl={`https://${site.domain}/blog/${article.slug}`}
>
  <!-- Structured Data -->
  <JsonLdArticle 
    headline={article.title}
    description={article.excerpt}
    url={`https://${site.domain}/blog/${article.slug}`}
    datePublished={article.published.toISOString()}
    dateModified={article.modified.toISOString()}
    author={{
      name: site.name,
      url: `https://${site.domain}`
    }}
    publisher={{
      name: site.name,
      logo: `https://${site.domain}${site.logo}`,
      url: `https://${site.domain}`
    }}
    image={article.image}
    articleSection={article.topic.title}
    wordCount={Math.ceil(article.content_md.length / 5)}
  />
  <JsonLdBreadcrumb items={breadcrumbItems} />

  <!-- Article Header -->
  <article class="py-8">
    <!-- Breadcrumb -->
    <nav class="container mx-auto px-4 py-4" aria-label="Breadcrumb">
      <ol class="flex items-center space-x-2 text-sm text-gray-600">
        {breadcrumbItems.map((item, index) => (
          <li class="flex items-center">
            {index > 0 && (
              <svg class="w-4 h-4 mx-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            )}
            {index === breadcrumbItems.length - 1 ? (
              <span class="font-medium text-gray-800">{item.name}</span>
            ) : (
              <a href={item.url} class="hover:text-gray-800 transition-colors">
                {item.name}
              </a>
            )}
          </li>
        ))}
      </ol>
    </nav>

    <!-- Article Content -->
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <!-- Article Header -->
        <header class="mb-8">
          <!-- Topic Badge -->
          <div class="mb-4">
            <span class="inline-block site-primary-bg text-white text-sm font-medium px-3 py-1 rounded-full">
              {article.topic.title}
            </span>
          </div>

          <!-- Article Title -->
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-800 leading-tight mb-6">
            {article.title}
          </h1>

          <!-- Article Meta -->
          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-8">
            <time datetime={article.published.toISOString()}>
              Publicado em {publishDate}
            </time>
            <span>•</span>
            <span>Por {site.name}</span>
            <span>•</span>
            <span>{Math.ceil(article.content_md.length / 1000)} min de leitura</span>
          </div>

          <!-- Featured Image -->
          {article.image && (
            <div class="mb-8">
              <img
                src={article.image}
                alt={article.title}
                class="w-full h-64 lg:h-96 object-cover rounded-lg shadow-lg"
                loading="eager"
              />
            </div>
          )}
        </header>

        <!-- Article Content -->
        <div class="prose prose-lg max-w-none">
          <!-- Article Excerpt -->
          {article.excerpt && (
            <div class="text-xl text-gray-600 font-medium mb-8 p-4 bg-gray-50 rounded-lg border-l-4 site-primary-bg">
              {article.excerpt}
            </div>
          )}

          <!-- Article Body -->
          <div 
            class="article-content"
            set:html={article.content_md}
          />
        </div>

        <!-- Article Footer -->
        <footer class="mt-12 pt-8 border-t border-gray-200">
          <!-- Share Section -->
          <div class="mb-8">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Compartilhe este artigo</h3>
            <div class="flex space-x-4">
              <!-- WhatsApp Share -->
              <a
                href={`https://wa.me/?text=${encodeURIComponent(`${article.title} - ${site.domain}/blog/${article.slug}`)}`}
                class="inline-flex items-center px-4 py-2 bg-green-500 text-white rounded-lg hover:bg-green-600 transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.488"/>
                </svg>
                WhatsApp
              </a>

              <!-- Facebook Share -->
              <a
                href={`https://www.facebook.com/sharer/sharer.php?u=${encodeURIComponent(`https://${site.domain}/blog/${article.slug}`)}`}
                class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
                Facebook
              </a>

              <!-- LinkedIn Share -->
              <a
                href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent(`https://${site.domain}/blog/${article.slug}`)}`}
                class="inline-flex items-center px-4 py-2 bg-blue-700 text-white rounded-lg hover:bg-blue-800 transition-colors"
                target="_blank"
                rel="noopener noreferrer"
              >
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                LinkedIn
              </a>
            </div>
          </div>

          <!-- Back to Blog -->
          <div class="text-center">
            <a
              href="/blog"
              class="inline-flex items-center site-primary-text font-medium hover:underline"
            >
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 17l-5-5m0 0l5-5m-5 5h12"></path>
              </svg>
              Voltar para o Blog
            </a>
          </div>
        </footer>
      </div>
    </div>
  </article>

  <!-- Call to Action Section -->
  <section class="py-16 site-gradient text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-2xl lg:text-3xl font-bold mb-4">
        {site.id === 'fastvistos' && 'Precisa de ajuda com seu visto americano?'}
        {site.id === 'conceptvistos' && 'Quer uma consultoria premium?'}
        {site.id === 'vibecode' && 'Precisa de desenvolvimento de software?'}
      </h2>
      <p class="text-lg mb-8 opacity-90 max-w-2xl mx-auto">
        {site.id === 'fastvistos' && 'Nossa equipe está pronta para te ajudar a conquistar seu visto americano com segurança e eficiência.'}
        {site.id === 'conceptvistos' && 'Oferecemos consultoria especializada para vistos internacionais com atendimento premium.'}
        {site.id === 'vibecode' && 'Criamos soluções digitais inovadoras para transformar suas ideias em realidade.'}
      </p>
      <a
        href={`https://wa.me/${site.whatsapp.replace(/\D/g, '')}`}
        class="inline-block bg-white text-gray-800 font-bold py-4 px-8 rounded-lg hover:bg-gray-100 transition-colors transform hover:scale-105 shadow-lg"
        style={`color: ${site.primaryColor};`}
      >
        Falar no WhatsApp
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .article-content {
    line-height: 1.7;
  }

  .article-content h2 {
    @apply text-2xl font-bold text-gray-800 mt-8 mb-4;
  }

  .article-content h3 {
    @apply text-xl font-bold text-gray-800 mt-6 mb-3;
  }

  .article-content p {
    @apply text-gray-700 mb-4;
  }

  .article-content ul,
  .article-content ol {
    @apply mb-4 pl-6;
  }

  .article-content li {
    @apply mb-2 text-gray-700;
  }

  .article-content ul li {
    @apply list-disc;
  }

  .article-content ol li {
    @apply list-decimal;
  }

  .article-content blockquote {
    @apply border-l-4 pl-4 italic text-gray-600 my-6;
    border-left-color: var(--primary-color);
  }

  .article-content code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm;
  }

  .article-content pre {
    @apply bg-gray-100 p-4 rounded-lg overflow-x-auto mb-4;
  }

  .article-content img {
    @apply rounded-lg shadow-md my-6;
  }

  .article-content a {
    color: var(--primary-color);
    @apply underline hover:no-underline;
  }
</style>
