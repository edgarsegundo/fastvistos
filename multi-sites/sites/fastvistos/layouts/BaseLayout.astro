---
// FastVistos BaseLayout with site-specific components
import Navigation from '../components/Navigation.astro';
import { getCurrentSite, type SiteConfig } from '../../core/lib/site-manager.js';

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
  canonicalUrl?: string;
  structuredData?: any;
  bodyClass?: string;
}

const {
  title,
  description,
  keywords,
  ogImage,
  ogType = 'website',
  noindex = false,
  canonicalUrl,
  structuredData,
  bodyClass = ''
} = Astro.props;

// Get current site configuration
const site = getCurrentSite();
const siteMetadata = {
  title: title ? `${title} | ${site.name}` : site.seo.title,
  description: description || site.seo.description,
  keywords: keywords || site.seo.keywords.join(', '),
  ogImage: ogImage || site.seo.ogImage,
  canonicalUrl: canonicalUrl || `https://${site.domain}${Astro.url.pathname}`
};

// Generate site-specific CSS variables
const cssVariables = {
  '--primary-color': site.primaryColor,
  '--secondary-color': site.secondaryColor,
  '--site-font-family': '"Inter", system-ui, sans-serif',
  '--text-color': '#1f2937',
  '--border-color': '#e5e7eb',
  '--background-light': '#f9fafb',
  ...site.customStyles?.cssVars
};

const cssVariableString = Object.entries(cssVariables)
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');
---

<!DOCTYPE html>
<html lang={site.language} class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Primary Meta Tags -->
  <title>{siteMetadata.title}</title>
  <meta name="title" content={siteMetadata.title} />
  <meta name="description" content={siteMetadata.description} />
  <meta name="keywords" content={siteMetadata.keywords} />
  <meta name="author" content={site.name} />
  <meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow'} />
  
  <!-- Canonical URL -->
  <link rel="canonical" href={siteMetadata.canonicalUrl} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={ogType} />
  <meta property="og:url" content={siteMetadata.canonicalUrl} />
  <meta property="og:title" content={siteMetadata.title} />
  <meta property="og:description" content={siteMetadata.description} />
  <meta property="og:image" content={`https://${site.domain}${siteMetadata.ogImage}`} />
  <meta property="og:site_name" content={site.name} />
  <meta property="og:locale" content={site.language.replace('-', '_')} />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={siteMetadata.canonicalUrl} />
  <meta property="twitter:title" content={siteMetadata.title} />
  <meta property="twitter:description" content={siteMetadata.description} />
  <meta property="twitter:image" content={`https://${site.domain}${siteMetadata.ogImage}`} />
  
  <!-- Favicons and Icons -->
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
  <link rel="manifest" href="/manifest.json" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <meta name="msapplication-TileColor" content={site.primaryColor} />
  <meta name="theme-color" content={site.primaryColor} />
  
  <!-- FastVistos specific meta -->
  <meta name="contact:email" content={site.contactEmail} />
  <meta name="contact:phone" content={site.phone} />
  <meta name="business:name" content={site.name} />
  <meta name="business:type" content="Visa Consultancy" />
  
  <!-- Preconnect to external domains -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
  
  <!-- FastVistos CSS Variables and Styles -->
  <style>
    :root {
      {cssVariableString};
    }
    
    /* FastVistos custom styles */
    body {
      font-family: var(--site-font-family);
      color: var(--text-color);
      line-height: 1.6;
    }
    
    .site-primary-bg {
      background-color: var(--primary-color);
    }
    
    .site-secondary-bg {
      background-color: var(--secondary-color);
    }
    
    .site-primary-text {
      color: var(--primary-color);
    }
    
    .site-secondary-text {
      color: var(--secondary-color);
    }
    
    .site-gradient {
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    }
    
    /* FastVistos specific enhancements */
    .visa-card {
      transition: all 0.3s ease;
      border: 1px solid var(--border-color);
    }
    
    .visa-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
      border-color: var(--primary-color);
    }
    
    .success-badge {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }
    
    .document-list li::before {
      content: "✓";
      color: var(--primary-color);
      font-weight: bold;
      margin-right: 8px;
    }
    
    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 8px;
    }
    
    ::-webkit-scrollbar-track {
      background: #f1f1f1;
    }
    
    ::-webkit-scrollbar-thumb {
      background: var(--primary-color);
      border-radius: 4px;
    }
    
    ::-webkit-scrollbar-thumb:hover {
      background: var(--secondary-color);
    }
    
    /* Smooth animations */
    .animate-fade-in {
      animation: fadeIn 0.6s ease-in-out;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
  </style>
  
  {/* Structured Data */}
  {structuredData && (
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  )}
  
  <!-- FastVistos Business Schema -->
  <script type="application/ld+json">
    {
      JSON.stringify({
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": site.name,
        "description": site.description,
        "url": `https://${site.domain}`,
        "logo": `https://${site.domain}${site.logo}`,
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": site.phone,
          "contactType": "customer service",
          "email": site.contactEmail,
          "availableLanguage": ["Portuguese", "English"]
        },
        "serviceArea": {
          "@type": "Place",
          "name": "Brasil"
        },
        "services": [
          "Visto Americano",
          "Preparação para Entrevista",
          "Documentação Consular",
          "Renovação de Visto"
        ],
        "sameAs": Object.values(site.socialMedia).filter(Boolean)
      })
    }
  </script>
</head>

