---
// Shared Home Layout - Used across all sites
import '../styles/global.css';
import HeadBasics from '../components/HeadBasics.astro';
import SEOMeta from '../components/SEOMeta.astro';
import AnalyticsHead from '../components/AnalyticsHead.astro';
import AnalyticsBody from '../components/AnalyticsBody.astro';
import { SiteConfigHelper } from '../lib/site-config-helper.ts';
import JsonLdGenerator from '../components/JsonLdGenerator.astro';

export interface Props {
  title?: string;
  description?: string;
  bodyClass?: string;
  pageUrl?: string;
  ogImage?: string;
  noIndex?: boolean;
  canonical?: string;
}

const { 
  title, 
  description, 
  bodyClass = '', 
  pageUrl,
  ogImage,
  noIndex = false,
  canonical
} = Astro.props;

// Load site configuration dynamically
import { siteConfig } from '../site-config.ts';
// const siteConfig = await SiteConfigHelper.loadSiteConfig();

// Use full language tag (pt-BR) or just language (pt) based on site config
const htmlLang = siteConfig.useFullLanguageTag ? siteConfig.language : siteConfig.language.split('-')[0];
---

<!DOCTYPE html>
<html lang={htmlLang}>
<head>
    
    <HeadBasics generator={Astro.generator} />
    
    
    <AnalyticsHead siteConfig={siteConfig} />
    
    
    <SEOMeta 
        siteConfig={siteConfig}
        title={title}
        description={description}
        pageUrl={pageUrl}
        ogImage={ogImage}
        noIndex={noIndex}
        canonical={canonical}
    />
    
    
    <link rel="preconnect" href={`https://${siteConfig.domain}`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700&display=swap"
        rel="stylesheet"
    />

    <JsonLdGenerator
        pageType="homepage"
        disable={{
            organization: true,
            website: true,
            breadcrumb: false,
            searchAction: false
        }}
    />

    <slot name="head" />
</head>
<body>
    
    <AnalyticsBody siteConfig={siteConfig} />
    
    
    <slot />
</body>
