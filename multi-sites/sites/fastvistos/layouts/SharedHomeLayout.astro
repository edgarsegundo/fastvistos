---
// Shared Home Layout - Used across all sites
import '../styles/global.css';
import SEOMeta from '../components/SEOMeta.astro';
import AnalyticsHead from '../components/AnalyticsHead.astro';
import AnalyticsBody from '../components/AnalyticsBody.astro';
import { SiteConfigHelper } from '../lib/site-config-helper.ts';

export interface Props {
  title?: string;
  description?: string;
  bodyClass?: string;
  pageUrl?: string;
  ogImage?: string;
  noIndex?: boolean;
  canonical?: string;
}

const { 
  title, 
  description, 
  bodyClass = '', 
  pageUrl,
  ogImage,
  noIndex = false,
  canonical
} = Astro.props;

// Load site configuration dynamically
import { siteConfig } from '../site-config.ts';
// const siteConfig = await SiteConfigHelper.loadSiteConfig();

// Use full language tag (pt-BR) or just language (pt) based on site config
const htmlLang = siteConfig.useFullLanguageTag ? siteConfig.language : siteConfig.language.split('-')[0];
---

<!DOCTYPE html>
<html lang={htmlLang}>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Analytics Scripts -->
    <AnalyticsHead siteConfig={siteConfig} />
    
    <!-- SEO Meta Tags from site-config -->
    <SEOMeta 
        siteConfig={siteConfig}
        title={title}
        description={description}
        pageUrl={pageUrl}
        ogImage={ogImage}
        noIndex={noIndex}
        canonical={canonical}
    />
    
    <!-- Fonts & Styles -->
    <link rel="preconnect" href={`https://${siteConfig.domain}`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
        href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700&display=swap"
        rel="stylesheet"
    />

    <slot name="head" />
</head>
<body>
    <!-- Analytics Body Tags -->
    <AnalyticsBody siteConfig={siteConfig} />
    
    <!-- Body content -->
    <slot />
</body>
