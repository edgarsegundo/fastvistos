---
import { getCollection } from 'astro:content';
import SharedBlogLayout from '../../layouts/SharedBlogLayout.astro';
import { siteConfig } from '../../site-config.ts';

// Generate static paths from the markdown files in content/blog/
export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

// Get the markdown entry from props
const { entry } = Astro.props;

// Render the markdown content
const { Content } = await entry.render();

const title = `${entry.data.title} - ${siteConfig.name} Blog`;
const description = entry.data.description || entry.data.title;
---

<SharedBlogLayout 
    title={title}
    description={description}
>
    <!-- Professional Markdown Styling for Astro Content Collections -->
    <style>
        /* Professional Blog Article Styles */
        .blog-article {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            line-height: 1.75;
            color: #2d3748;
            background: #ffffff;
        }

        /* Markdown Generated Elements - Using :global() for Astro */
        .blog-content :global(h1) {
            font-size: 2.75rem;
            font-weight: 700;
            color: #1a202c;
            margin: 3rem 0 1.5rem 0;
            line-height: 1.2;
            letter-spacing: -0.025em;
        }

        .blog-content :global(h2) {
            font-size: 2.25rem;
            font-weight: 600;
            color: #2d3748;
            margin: 3rem 0 1.5rem 0;
            line-height: 1.3;
            letter-spacing: -0.015em;
            border-bottom: 2px solid #e2e8f0;
            padding-bottom: 0.75rem;
        }

        .blog-content :global(h3) {
            font-size: 1.875rem;
            font-weight: 600;
            color: #2d3748;
            margin: 2.5rem 0 1.25rem 0;
            line-height: 1.35;
        }

        .blog-content :global(h4) {
            font-size: 1.5rem;
            font-weight: 600;
            color: #374151;
            margin: 2rem 0 1rem 0;
            line-height: 1.4;
        }

        .blog-content :global(h5) {
            font-size: 1.25rem;
            font-weight: 600;
            color: #374151;
            margin: 1.75rem 0 0.75rem 0;
            line-height: 1.45;
        }

        .blog-content :global(h6) {
            font-size: 1.125rem;
            font-weight: 600;
            color: #4a5568;
            margin: 1.5rem 0 0.75rem 0;
            line-height: 1.5;
        }

        /* Paragraphs - Optimized for Reading */
        .blog-content :global(p) {
            margin: 1.75rem 0;
            font-size: 1.125rem;
            line-height: 1.8;
            color: #374151;
            text-align: justify;
            hyphens: auto;
        }

        /* First paragraph after heading - slightly larger */
        .blog-content :global(h1 + p),
        .blog-content :global(h2 + p),
        .blog-content :global(h3 + p) {
            font-size: 1.2rem;
            margin-top: 1rem;
            color: #2d3748;
        }

        /* Strong/Bold Text - ** in markdown */
        .blog-content :global(strong) {
            font-weight: 700;
            color: #1a202c;
            letter-spacing: 0.01em;
        }

        /* Emphasis/Italic Text - * in markdown */
        .blog-content :global(em) {
            font-style: italic;
            color: #2d3748;
            font-weight: 500;
        }

        /* Lists - Better Spacing and Visual Hierarchy */
        .blog-content :global(ul), .blog-content :global(ol) {
            margin: 2rem 0;
            padding-left: 2rem;
            line-height: 1.8;
        }

        .blog-content :global(li) {
            margin: 1rem 0;
            font-size: 1.125rem;
            line-height: 1.8;
            color: #374151;
        }

        .blog-content :global(ul li) {
            list-style-type: none;
            position: relative;
            padding-left: 0.5rem;
        }

        .blog-content :global(ul li::before) {
            content: "â€¢";
            color: #3182ce;
            font-weight: bold;
            position: absolute;
            left: -1.5rem;
            font-size: 1.3rem;
            line-height: 1.8;
        }

        .blog-content :global(ol li) {
            list-style-type: decimal;
            color: #374151;
            padding-left: 0.5rem;
        }

        /* Nested Lists */
        .blog-content :global(ul ul), .blog-content :global(ol ol), .blog-content :global(ul ol), .blog-content :global(ol ul) {
            margin: 0.75rem 0;
            padding-left: 1.5rem;
        }

        /* Links - Subtle Professional Styling */
        .blog-content :global(a) {
            color: #3182ce;
            text-decoration: none;
            border-bottom: 1px solid transparent;
            transition: all 0.2s ease-in-out;
            font-weight: 500;
        }

        .blog-content :global(a:hover) {
            color: #2c5282;
            border-bottom-color: #3182ce;
            background-color: rgba(49, 130, 206, 0.05);
        }

        /* Blockquotes - Professional Styling */
        .blog-content :global(blockquote) {
            border-left: 4px solid #3182ce;
            margin: 2.5rem 0;
            padding: 1.5rem 2rem;
            background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
            font-style: italic;
            color: #2d3748;
            position: relative;
            border-radius: 0 0.5rem 0.5rem 0;
        }

        .blog-content :global(blockquote p) {
            margin: 0.75rem 0;
            font-size: 1.15rem;
            line-height: 1.75;
        }

        /* Code - Inline and Block */
        .blog-content :global(code) {
            background: #f1f5f9;
            color: #e53e3e;
            padding: 0.25rem 0.5rem;
            border-radius: 0.375rem;
            font-size: 0.9rem;
            font-family: 'SF Mono', 'Monaco', 'Menlo', 'Ubuntu Mono', 'Consolas', monospace;
            border: 1px solid #e2e8f0;
        }

        .blog-content :global(pre) {
            background: #1a202c;
            color: #e2e8f0;
            padding: 2rem;
            border-radius: 0.75rem;
            overflow-x: auto;
            margin: 2.5rem 0;
            border: 1px solid #2d3748;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .blog-content :global(pre code) {
            background: transparent;
            color: inherit;
            padding: 0;
            border: none;
            font-size: 0.95rem;
        }

        /* Horizontal Rules - Section Dividers */
        .blog-content :global(hr) {
            border: none;
            height: 3px;
            background: linear-gradient(to right, transparent, #cbd5e0, transparent);
            margin: 4rem 0;
            border-radius: 2px;
        }

        /* Images - Professional Layout */
        .blog-content :global(img) {
            max-width: 100%;
            height: auto;
            border-radius: 0.75rem;
            margin: 3rem auto;
            display: block;
            box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        /* Tables - Clean Professional Design */
        .blog-content :global(table) {
            width: 100%;
            border-collapse: collapse;
            margin: 3rem 0;
            background: white;
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .blog-content :global(th), .blog-content :global(td) {
            padding: 1.25rem 1.5rem;
            text-align: left;
            border-bottom: 1px solid #e5e7eb;
            font-size: 1rem;
            line-height: 1.6;
        }

        .blog-content :global(th) {
            background: #f9fafb;
            font-weight: 600;
            color: #374151;
            text-transform: uppercase;
            font-size: 0.875rem;
            letter-spacing: 0.05em;
        }

        .blog-content :global(tbody tr:hover) {
            background: #f9fafb;
        }

        /* Article Header Styling */
        .article-header {
            text-align: center;
            margin-bottom: 4rem;
            padding-bottom: 3rem;
            border-bottom: 2px solid #e5e7eb;
        }

        .article-title {
            font-size: 3.5rem;
            font-weight: 800;
            color: #111827;
            margin-bottom: 1.5rem;
            line-height: 1.1;
            letter-spacing: -0.025em;
        }

        .article-meta {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 2rem;
            margin: 2rem 0;
            font-size: 1rem;
            color: #6b7280;
        }

        .article-topic {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 9999px;
            font-size: 0.95rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.025em;
        }

        .article-image {
            width: 100%;
            max-height: 500px;
            object-fit: cover;
            border-radius: 1.25rem;
            margin: 3rem 0;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }

        /* Reading Experience Enhancements */
        .blog-content {
            max-width: 750px;
            margin: 0 auto;
            padding: 0 1rem;
        }

        /* Special Typography Elements */
        .blog-content :global(mark) {
            background: linear-gradient(120deg, #fbbf24 0%, #f59e0b 100%);
            padding: 0.125rem 0.25rem;
            border-radius: 0.25rem;
            color: #92400e;
        }

        .blog-content :global(kbd) {
            background: #374151;
            color: #f9fafb;
            padding: 0.25rem 0.5rem;
            border-radius: 0.375rem;
            font-family: 'SF Mono', monospace;
            font-size: 0.875rem;
            border: 1px solid #4b5563;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .article-title {
                font-size: 2.5rem;
                line-height: 1.2;
            }
            
            .blog-content :global(h1) {
                font-size: 2.25rem;
            }
            
            .blog-content :global(h2) {
                font-size: 1.875rem;
            }

            .blog-content :global(h3) {
                font-size: 1.5rem;
            }

            .blog-content :global(p) {
                font-size: 1.125rem;
                line-height: 1.75;
                text-align: left;
            }
            
            .article-meta {
                flex-direction: column;
                gap: 1rem;
            }

            .blog-content {
                padding: 0 0.5rem;
            }

            .blog-content :global(ul), .blog-content :global(ol) {
                padding-left: 1.5rem;
            }
        }

        @media (max-width: 480px) {
            .article-title {
                font-size: 2rem;
            }

            .blog-content :global(p) {
                font-size: 1rem;
                line-height: 1.7;
            }

            .blog-content :global(h1) {
                font-size: 1.875rem;
            }

            .blog-content :global(h2) {
                font-size: 1.5rem;
            }
        }
    </style>

    <article class="blog-article max-w-4xl mx-auto px-4 py-8">
        <header class="article-header">
            <h1 class="article-title">{entry.data.title}</h1>
            
            <div class="article-meta">
                <time datetime={entry.data.pubDate}>
                    {new Date(entry.data.pubDate).toLocaleDateString('pt-BR', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    })}
                </time>
                
                {entry.data.topic && (
                    <span class="article-topic">
                        {entry.data.topic}
                    </span>
                )}
            </div>

            {entry.data.image && entry.data.image !== "/assets/images/blog/" && (
                <img 
                    src={entry.data.image}
                    alt={entry.data.title}
                    class="article-image"
                />
            )}
        </header>

        <!-- Professional styled markdown content -->
        <div class="blog-content">
            <Content />
        </div>
    </article>
</SharedBlogLayout>