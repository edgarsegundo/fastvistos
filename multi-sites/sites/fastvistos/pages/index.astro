---
// FastVistos main homepage
import SharedHomeLayout from '../layouts/SharedHomeLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import AboutSection from '../components/AboutSection.astro';
import PassportSection from '../components/PassportSection.astro';
import CarouselSection from '../components/CarouselSection.astro';
import FaqSection from '../components/FaqSection.astro';
import FooterSection from '../components/FooterSection.astro';
import Whatsapp from '../components/Whatsapp.astro';
import CallToActionSection from '../components/CallToActionSection.astro';
import Navigation from '../components/Navigation.astro';
import JsonLdGenerator from '../components/JsonLdGenerator.astro';

const {
  bodyClass = '',
  // bodyStyle = ''
} = Astro.props;
---

<SharedHomeLayout 
  bodyClass={`leading-normal tracking-normal text-white gradient ${bodyClass} antialiased`}
  bodyStyle="font-family: 'Source Sans Pro', sans-serif;"
>
  <!-- Additional head content specific to this layout -->
  <Fragment slot="head">
    <JsonLdGenerator
        pageType="blog-post"
    />
  </Fragment>

  <!-- Body content -->
  <Navigation />
  <HeroSection />
  <ServicesSection />
  <AboutSection />
  <PassportSection />
  <CarouselSection />
  <FaqSection />
  <CallToActionSection />
  <FooterSection />
  <Whatsapp />
</SharedHomeLayout>

<style is:global>
  .home-layout p,
  .home-layout h3,
  .home-layout ul,
  .home-layout a,
  .home-layout span {
    color: #1b375c !important;
  }
  
  .home-main {
    min-height: 100vh;
  }
</style>