---
// FastVistos main homepage
import SharedHomeLayout from '../layouts/SharedHomeLayout.astro';
import HeroSection from '../components/HeroSection.astro';
import ServicesSection from '../components/ServicesSection.astro';
import AboutSection from '../components/AboutSection.astro';
import PassportSection from '../components/PassportSection.astro';
import CompararAd from '../components/CompararAd.astro';
import CarouselSection from '../components/CarouselSection.astro';
import FaqSection from '../components/FaqSection.astro';
import FooterSection from '../components/FooterSection.astro';
import Whatsapp from '../components/Whatsapp.astro';
import CallToActionSection from '../components/CallToActionSection.astro';
import GoogleMapsSection from '../components/GoogleMapsSection.astro';
import Navigation from '../components/Navigation.astro';
import { siteConfig } from '../site-config.ts';
import { faqData } from '../config/faqConfig.js';
import { servicesData } from '../config/servicesConfig.js';
import { reviewVideos } from '../config/reviewVideosConfig.js';
import JsonLdHomePageBase from '../components/JsonLdHomePageBase.astro';

const { bodyClass = '', bodyStyle = '' } = Astro.props;
---


<SharedHomeLayout
    bodyClass={`${bodyClass} leading-normal tracking-normal text-white gradient antialiased`}
    bodyStyle={`${bodyStyle} font-family: 'Source Sans Pro', sans-serif;`}
    themeToggleDisable={true}

    canonicalConf={siteConfig.site.canonical}
    faviconPathFromConf={siteConfig.site.faviconPath}
    seoFromConf={siteConfig.homePageConfig.seo}

    titleFromConf={siteConfig.homePageConfig.seo.title}
    descriptionFromConf={siteConfig.homePageConfig.seo.description}
    authorNameFromConf={siteConfig.site.authorName}
    imageFromConf={null}
    imageUrlFromConf={siteConfig.site.primaryImage.url}
    imageCaptionFromConf={siteConfig.site.primaryImage.imageCaption}
    imageWidthFromConf={siteConfig.site.primaryImage.imageWidth}
    imageHeightFromConf={siteConfig.site.primaryImage.imageHeight}
>
    <!-- Additional head content specific to this layout -->
    <Fragment slot="head">
        <JsonLdHomePageBase
            faqList={faqData}
            servicesList={servicesData}
            reviewsList={reviewVideos}
            disableReviews={true}
        />
    </Fragment>

    <!-- Body content -->
    <Navigation />
    <HeroSection />
    <ServicesSection />
    <AboutSection />
    
    <PassportSection />
    <CompararAd />
    <CarouselSection />
    <FaqSection
        relativePath="multi-sites/sites/fastvistos/components/FaqSection.astro"
        siteId={siteConfig.site.id}
    />
    <GoogleMapsSection />
    <CallToActionSection />
    <FooterSection />
    <Whatsapp />
</SharedHomeLayout>

<style is:global>
    .home-layout p,
    .home-layout h3,
    .home-layout ul,
    .home-layout a,
    .home-layout span {
        color: #1b375c !important;
    }

    .home-main {
        min-height: 100vh;
    }
</style>
