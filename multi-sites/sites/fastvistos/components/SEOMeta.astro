const { 
    siteConfig,
    seo,
    noIndex = false,
    enhancedIndexing = false,
} = Astro.props;

// Use page-specific values or fallback to site config
const canonicalUrl = `https://${siteConfig.site.domain}`;

// Build complete image URL if it's a relative path
