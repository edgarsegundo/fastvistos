---
// JsonLdService.astro - Structured data for Service schema
export interface Props {
    name: string;
    description: string;
    serviceType?: string;
    provider?: {
        name: string;
        url: string;
    };
    areaServed?: string[];
    offers?: {
        priceCurrency: string;
        priceRange?: string;
        availability?: string;
    };
}

const {
    name,
    description,
    serviceType = 'VisaService',
    provider = {
        name: 'Fast Vistos',
        url: 'https://fastvistos.com.br',
    },
    areaServed = ['Brazil', 'SÃ£o Paulo', 'Campinas'],
    offers = {
        priceCurrency: 'BRL',
        priceRange: '$$',
        availability: 'InStock',
    },
} = Astro.props;

const schema = {
    '@context': 'https://schema.org',
    '@type': 'Service',
    name: name,
    description: description,
    serviceType: serviceType,
    provider: {
        '@type': 'Organization',
        name: provider.name,
        url: provider.url,
    },
    areaServed: areaServed.map(area => ({
        '@type': 'Place',
        name: area,
    })),
    offers: {
        '@type': 'Offer',
        priceCurrency: offers.priceCurrency,
        priceRange: offers.priceRange,
        availability: `https://schema.org/${offers.availability}`,
    },
};
---

<script type="application/ld+json" set:html={JSON.stringify(schema)} />
