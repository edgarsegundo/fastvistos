---
export function getLocalBusinessBlock({
  disableLocalBusiness,
  site,
}: {
  disableLocalBusiness: boolean;
  site: {
    name: string;
    canonical: string;
    logo?: string;
    contactPoint?: {
      telephone?: string;
      email?: string;
    };
    address?: {
      streetAddress?: string;
      addressLocality?: string;
      addressRegion?: string;
      postalCode?: string;
      addressCountry?: string;
    };
    // geo?: {
    //   latitude?: number;
    //   longitude?: number;
    // };
    openingHours?: string[];
    // sameAs?: string[];
    priceRange?: string;
  };
}) {
  if (disableLocalBusiness) return null;

  return {
    // '@context': 'https://schema.org',
    '@type': 'LocalBusiness',
    '@id': `${site.canonical}#localbusiness`,
    name: site.name,
    url: site.canonical,
    image: site.logo || `${site.canonical}/images/logo.png`,
    telephone: site.contactPoint?.telephone,
    email: site.contactPoint?.email || 'contato@exemplo.com',
    priceRange: site.priceRange || '$$',
    openingHours: site.openingHours, // e.g. ['Mo-Fr 09:00-18:00', 'Sa 09:00-13:00']
    address: {
      '@type': 'PostalAddress',
      streetAddress: site.address?.streetAddress,
      addressLocality: site.address?.addressLocality,
      addressRegion: site.address?.addressRegion,
      postalCode: site.address?.postalCode,
      addressCountry: site.address?.addressCountry,
    },
    // geo: site.geo || {
    //   '@type': 'GeoCoordinates',
    //   latitude: -23.55052,
    //   longitude: -46.633308,
    // },
    // hasMap:
    //   site.geo &&
    //   `https://www.google.com/maps/?q=${site.geo.latitude},${site.geo.longitude}`,
    // sameAs:
    //   site.sameAs || [
    //     'https://www.facebook.com/suaempresa',
    //     'https://www.instagram.com/suaempresa',
    //     'https://www.linkedin.com/company/suaempresa',
    //   ],
  };
}
