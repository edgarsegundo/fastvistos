---
// New config-driven approach - pass a complete SEO config object
export interface Props {
    seoConfig: {
        meta: {
            title: string;
            description: string;
            keywords: string;
            author: string;
            robots: string;
            locale: string;
            siteName: string;
            themeColor: string;
            canonicalUrl: string;
            hreflang: string;
            googleSiteVerification?: string;
            googlebot?: string;
            bingbot?: string;
            geoRegion?: string;
            geoCountry?: string;
            geoPlacename?: string;
        };
        openGraph: {
            type: string;
            title: string;
            description: string;
            url: string;
            image: string;
            locale: string;
            siteName: string;
        };
        twitter: {
            card: string;
            title: string;
            description: string;
            image: string;
        };
        images: {
            faviconIco: string;
            appleTouchIcon: string;
        };
    };
}

const { seoConfig } = Astro.props;
const { meta, openGraph, twitter, images } = seoConfig;
---

<!-- Primary Meta Tags -->
<title>{meta.title}</title>
<meta name="description" content={meta.description} />
<meta name="keywords" content={meta.keywords} />
<meta name="author" content={meta.author} />
<meta name="robots" content={meta.robots} />
<meta name="theme-color" content={meta.themeColor} />

<!-- Search Engine Verification -->
{
    meta.googleSiteVerification && (
        <meta name="google-site-verification" content={meta.googleSiteVerification} />
    )
}

<!-- Bot-specific directives -->
{meta.googlebot && <meta name="googlebot" content={meta.googlebot} />}
{meta.bingbot && <meta name="bingbot" content={meta.bingbot} />}

<!-- Canonical URL -->
<link rel="canonical" href={meta.canonicalUrl} />

<!-- Language/Region -->
<link rel="alternate" hreflang={meta.hreflang} href={meta.canonicalUrl} />
<link rel="alternate" hreflang="x-default" href={meta.canonicalUrl} />

<!-- Geo Tags -->
{meta.geoRegion && <meta name="geo.region" content={meta.geoRegion} />}
{meta.geoCountry && <meta name="geo.country" content={meta.geoCountry} />}
{meta.geoPlacename && <meta name="geo.placename" content={meta.geoPlacename} />}

<!-- Mobile Web App -->
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="default" />

<!-- Performance Optimization -->
<link rel="dns-prefetch" href="//fonts.googleapis.com" />
<link rel="dns-prefetch" href="//fonts.gstatic.com" />

<!-- Favicons and Touch Icons -->
<link rel="icon" href={images.faviconIco} />
<link rel="apple-touch-icon" href={images.appleTouchIcon} />

<!-- Open Graph / Facebook -->
<meta property="og:locale" content={openGraph.locale} />
<meta property="og:site_name" content={openGraph.siteName} />
<meta property="og:type" content={openGraph.type} />
<meta property="og:title" content={openGraph.title} />
<meta property="og:description" content={openGraph.description} />
<meta property="og:url" content={openGraph.url} />
<meta property="og:image" content={openGraph.image} />

<!-- Twitter -->
<meta name="twitter:card" content={twitter.card} />
<meta name="twitter:title" content={twitter.title} />
<meta name="twitter:description" content={twitter.description} />
<meta name="twitter:image" content={twitter.image} />
