  <!-- VibeCode Modern Tech CSS Variables and Styles -->
  <style>
    :root {
      {cssVariableString};
    }
    
    /* VibeCode modern tech styles */
    body {
      font-family: var(--heading-font);
      color: var(--text-color);
      line-height: 1.6;
      background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: var(--heading-font);
      font-weight: 600;
      letter-spacing: -0.025em;
    }
    
    code, pre {
      font-family: var(--site-font-family);
      background: var(--code-bg);
      color: #e2e8f0;
      padding: 0.25rem 0.5rem;
      border-radius: 0.375rem;
      font-size: 0.875rem;
    }
    
    .site-primary-bg {
      background-color: var(--primary-color);
    }
    
    .site-secondary-bg {
      background-color: var(--secondary-color);
    }
    
    .site-primary-text {
      color: var(--primary-color);
    }
    
    .site-secondary-text {
      color: var(--secondary-color);
    }
    
    .site-gradient {
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    }
    
    /* VibeCode tech enhancements */
    .tech-card {
      background: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);
      border: 1px solid var(--border-color);
      box-shadow: var(--tech-shadow);
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }
    
    .tech-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, var(--primary-color), var(--accent-blue), var(--accent-green));
      transform: scaleX(0);
      transition: transform 0.3s ease;
    }
    
    .tech-card:hover::before {
      transform: scaleX(1);
    }
    
    .tech-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.15);
      border-color: var(--primary-color);
    }
    
    .code-highlight {
      background: var(--code-bg);
      border-left: 4px solid var(--accent-green);
    }
    
    .tech-badge {
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-blue) 100%);
      color: white;
      font-family: var(--site-font-family);
      font-size: 0.75rem;
      font-weight: 500;
    }
    
    .glow-effect {
      box-shadow: 0 0 20px rgba(66, 153, 225, 0.3);
    }
    
    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 12px;
    }
    
    ::-webkit-scrollbar-track {
      background: var(--background-light);
    }
    
    ::-webkit-scrollbar-thumb {
      background: linear-gradient(135deg, var(--primary-color), var(--accent-blue));
      border-radius: 6px;
      border: 2px solid var(--background-light);
    }
    
    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
    }
    
    /* Tech animations */
    .animate-tech-slide {
      animation: techSlide 0.6s ease-out;
    }
    
    @keyframes techSlide {
      from { 
        opacity: 0; 
        transform: translateX(-30px) scale(0.95); 
      }
      to { 
        opacity: 1; 
        transform: translateX(0) scale(1); 
      }
    }
    
    .typing-effect::after {
      content: '|';
      animation: blink 1s infinite;
      color: var(--accent-green);
    }
    
    @keyframes blink {
      0%, 50% { opacity: 1; }
      51%, 100% { opacity: 0; }
    }
    
    .hover-glow:hover {
      box-shadow: 0 0 30px rgba(66, 153, 225, 0.4);
    }
  </style>
  
  {/* Structured Data */}
  {structuredData && (
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  )}
  
  <!-- VibeCode Organization Schema -->
  <script type="application/ld+json">
    {
      JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": site.name,
        "description": site.description,
        "url": `https://${site.domain}`,
