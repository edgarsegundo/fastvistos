---
// VibeCode BaseLayout with modern tech styling
import { getCurrentSite } from '../../core/lib/site-manager.ts';

export interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
  ogType?: string;
  noindex?: boolean;
  canonicalUrl?: string;
  structuredData?: any;
  bodyClass?: string;
}

const {
  title,
  description,
  keywords,
  ogImage,
  ogType = 'website',
  noindex = false,
  canonicalUrl,
  structuredData,
  bodyClass = ''
} = Astro.props;

// Get current site configuration
const site = getCurrentSite();
const siteMetadata = {
  title: title ? `${title} | ${site.name}` : site.seo.title,
  description: description || site.seo.description,
  keywords: keywords || site.seo.keywords.join(', '),
  ogImage: ogImage || site.seo.ogImage,
  canonicalUrl: canonicalUrl || `https://${site.domain}${Astro.url.pathname}`
};

// Generate VibeCode modern tech CSS variables
const cssVariables = {
  '--primary-color': site.primaryColor,
  '--secondary-color': site.secondaryColor,
  '--site-font-family': '"JetBrains Mono", "Fira Code", "SF Mono", Monaco, "Cascadia Code", "Roboto Mono", Consolas, "Courier New", monospace',
  '--heading-font': '"Inter", system-ui, sans-serif',
  '--text-color': '#1a202c',
  '--text-light': '#4a5568',
  '--border-color': '#e2e8f0',
  '--background-dark': '#2d3748',
  '--background-light': '#f7fafc',
  '--code-bg': '#1a202c',
  '--accent-green': '#48bb78',
  '--accent-blue': '#4299e1',
  '--tech-shadow': '0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)',
  ...site.customStyles?.cssVars
};

const cssVariableString = Object.entries(cssVariables)
  .map(([key, value]) => `${key}: ${value}`)
  .join('; ');
---

<!DOCTYPE html>
<html lang={site.language} class="scroll-smooth">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <!-- Primary Meta Tags -->
  <title>{siteMetadata.title}</title>
  <meta name="title" content={siteMetadata.title} />
  <meta name="description" content={siteMetadata.description} />
  <meta name="keywords" content={siteMetadata.keywords} />
  <meta name="author" content={site.name} />
  <meta name="robots" content={noindex ? 'noindex, nofollow' : 'index, follow'} />
  
  <!-- Canonical URL -->
  <link rel="canonical" href={siteMetadata.canonicalUrl} />
  
  <!-- Open Graph / Facebook -->
  <meta property="og:type" content={ogType} />
  <meta property="og:url" content={siteMetadata.canonicalUrl} />
  <meta property="og:title" content={siteMetadata.title} />
  <meta property="og:description" content={siteMetadata.description} />
  <meta property="og:image" content={`https://${site.domain}${siteMetadata.ogImage}`} />
  <meta property="og:site_name" content={site.name} />
  <meta property="og:locale" content={site.language.replace('-', '_')} />
  
  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content={siteMetadata.canonicalUrl} />
  <meta property="twitter:title" content={siteMetadata.title} />
  <meta property="twitter:description" content={siteMetadata.description} />
  <meta property="twitter:image" content={`https://${site.domain}${siteMetadata.ogImage}`} />
  
