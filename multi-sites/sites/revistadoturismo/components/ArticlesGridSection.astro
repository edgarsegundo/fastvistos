<script>
function updateWxHLabels() {
    // Encontrar todos os divs com a classe aspect-[3/2]
    const cards = document.querySelectorAll('[class*="aspect-"]');
    cards.forEach(function(card) {
        const rect = card.getBoundingClientRect();
        const label = card.querySelector('.wxh-label');
        if (label) {
            const width = Math.round(rect.width);
            const height = Math.round(rect.height);
            const ratio = (width / height).toFixed(2);
            label.textContent = width + ' x ' + height + ' (ratio: ' + ratio + ')';
        }
    });
}

// Debounce function para evitar muitas chamadas
let resizeTimeout;
function debouncedUpdate() {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(function() {
        updateWxHLabels();
    }, 50); // Espera 50ms após parar de redimensionar
}

// Executar quando a página carregar
window.addEventListener('load', function() {
    updateWxHLabels();
});

// Atualizar quando redimensionar (com debounce)
window.addEventListener('resize', debouncedUpdate);

// Também atualizar durante o resize (tempo real)
let rafId;
window.addEventListener('resize', function() {
    if (rafId) {
        cancelAnimationFrame(rafId);
    }
    rafId = requestAnimationFrame(updateWxHLabels);
});

// Executar imediatamente ao carregar o script
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', updateWxHLabels);
} else {
    updateWxHLabels();
}
</script>
