---
import SharedHomeLayout from '../layouts/SharedHomeLayout.astro';
import { siteConfig } from '../site-config.ts';
import JsonLdHomePageBase from '../components/JsonLdHomePageBase.astro';
import ArticlesGridSection from '../components/ArticlesGridSection.astro';
import HeroSection from '../components/HeroSection.astro';
import FooterSection from '../components/FooterSection.astro';
import HeaderSection from '../components/HeaderSection.astro';
import CarouselSection from '../components/CarouselSection.astro';
import MostReadSection from '../components/MostReadSection.astro';

const { bodyClass = '', bodyStyle = '' } = Astro.props;
---

<link
  href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:wght@400;600;700&family=Manrope:wght@400;500;600&family=Spectral:wght@300;400;500;600&display=swap"
  rel="stylesheet"
/>

<SharedHomeLayout
  bodyClass={`${bodyClass} leading-normal antialiased`}
  bodyStyle={`${bodyStyle} `}
  canonicalConf={siteConfig.site.canonical}
  faviconPathFromConf={siteConfig.site.faviconPath}
  seoFromConf={siteConfig.homePageConfig.seo}
  titleFromConf={siteConfig.homePageConfig.seo.title}
  descriptionFromConf={siteConfig.homePageConfig.seo.description}
  authorNameFromConf={siteConfig.site.authorName}
  imageFromConf={null}
  imageUrlFromConf={siteConfig.site.primaryImage.url}
  imageCaptionFromConf={siteConfig.site.primaryImage.imageCaption}
  imageWidthFromConf={siteConfig.site.primaryImage.imageWidth}
  imageHeightFromConf={siteConfig.site.primaryImage.imageHeight}
>
  <Fragment slot="head">
    <JsonLdHomePageBase
      faqList={[]}
      servicesList={[]}
      reviewsList={[]}
      disableReviews={false}
    />
  </Fragment>

  <main class="min-h-screen">
    <HeaderSection />
    <HeroSection />

    <MostReadSection />
    <!-- <ArticlesGridSection /> -->
    <CarouselSection />
    <FooterSection />
  </main>
</SharedHomeLayout>

<style is:global>
  :root {
    --font-title: 'Bodoni Moda', serif;
    --font-subtitle: 'Manrope', system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
    --font-body: 'Spectral', Georgia, serif;

    --color-text-main: #1b375c;
  }

  /* BASE */
  body {
    font-family: var(--font-body);
    line-height: 1.7;
    color: var(--color-text-main);
    -webkit-font-smoothing: antialiased;
  }

  section {
    margin-bottom: 5rem;
  }

  /* TITLES — fashion editorial */
  h1 {
    font-family: var(--font-title);
    font-size: clamp(2.9rem, 6vw, 4.2rem);
    font-weight: 700;
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: 1.2rem;
  }

  h2 {
    font-family: var(--font-title);
    font-size: clamp(2.1rem, 4.8vw, 3rem);
    font-weight: 600;
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  /* SUBTITLES — quiet & precise */
  h3,
  h4 {
    font-family: var(--font-subtitle);
    font-weight: 600;
    letter-spacing: 0.04em;
    line-height: 1.4;
    margin-bottom: 0.6rem;
    text-transform: uppercase;
  }

  h3 {
    font-size: 0.95rem;
  }

  /* BODY TEXT — refined reading */
  p {
    font-size: 1.02rem;
    max-width: 62ch;
    margin-bottom: 1.6rem;
  }

  a {
    font-family: var(--font-subtitle);
    color: inherit;
    text-decoration-thickness: 1px;
    text-underline-offset: 4px;
  }

  /* EDITORIAL ELEMENTS */
  .kicker {
    font-family: var(--font-subtitle);
    text-transform: uppercase;
    font-size: 0.7rem;
    letter-spacing: 0.18em;
    opacity: 0.6;
  }

  .deck {
    font-family: var(--font-body);
    font-size: 1.1rem;
    opacity: 0.85;
  }

  /* LOGO */
  .logo-revista {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    line-height: 1;
    color: #1b375c;
  }
  .logo-revista.logo-revista-black { color: #fff; }

  .logo-small {
    font-family: var(--font-title), serif;
    font-size: 0.65rem;
    font-weight: 400;
    letter-spacing: 0.25em;
    text-transform: uppercase;
    margin-bottom: -2px;
    opacity: 0.85;
  }

  .logo-small.no-flex {
    text-align: left;
    display: block;
    margin-bottom: -14px;
  }

  .logo-large {
    font-family: var(--font-title), serif;
    font-size: 2rem;
    font-weight: 700;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    display: flex;
  }

  .logo-large.no-flex {
    display: block;
    margin-top: 0;
  }

  @media (max-width: 768px) {
    .logo-small {
      font-size: 0.55rem;
    }
  }
</style>
