/**
 * Documentation Hub - Entry point for the Revolutionary Documentation System
 * 
 * This page serves as the main entry point for accessing the documentation
 * viewer and provides quick navigation to key documentation areas.
 */

import { glob } from 'glob';

// Get documentation statistics
const markdownFiles = await glob('**/*.md', {
  cwd: process.cwd(),
  ignore: ['node_modules/**', '.git/**', 'dist/**', 'build/**']
});

const totalDocs = markdownFiles.length;
const categorizedDocs = {
  'README Files': markdownFiles.filter(f => f.startsWith('README')).length,
  'Component Docs': markdownFiles.filter(f => f.includes('components/')).length,
  'Core Documentation': markdownFiles.filter(f => f.includes('docs/')).length,
  'Other': markdownFiles.filter(f => 
    !f.startsWith('README') && 
    !f.includes('components/') && 
    !f.includes('docs/')
  ).length
};
