  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  
  <!-- Premium Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet" />
  
  <!-- ConceptVistos Premium CSS Variables and Styles -->
  <style>
    :root {
      {cssVariableString};
    }
    
    /* ConceptVistos premium styles */
    body {
      font-family: "Inter", system-ui, sans-serif;
      color: var(--text-color);
      line-height: 1.7;
    }
    
    h1, h2, h3, h4, h5, h6 {
      font-family: var(--site-font-family);
      font-weight: 600;
      letter-spacing: -0.025em;
    }
    
    .site-primary-bg {
      background-color: var(--primary-color);
    }
    
    .site-secondary-bg {
      background-color: var(--secondary-color);
    }
    
    .site-primary-text {
      color: var(--primary-color);
    }
    
    .site-secondary-text {
      color: var(--secondary-color);
    }
    
    .site-gradient {
      background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
    }
    
    /* Premium ConceptVistos enhancements */
    .premium-card {
      background: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);
      border: 1px solid var(--border-color);
      box-shadow: var(--premium-shadow);
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .premium-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 32px 64px -12px rgba(0, 0, 0, 0.15);
      border-color: var(--gold-accent);
    }
    
    .gold-accent {
      color: var(--gold-accent);
    }
    
    .premium-badge {
      background: linear-gradient(135deg, var(--gold-accent) 0%, #f6ad55 100%);
      box-shadow: 0 4px 15px rgba(214, 158, 46, 0.3);
    }
    
    .luxury-border {
      border-image: linear-gradient(45deg, var(--primary-color), var(--gold-accent)) 1;
    }
    
    .elegant-transition {
      transition: all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
    }
    
    /* Custom scrollbar */
    ::-webkit-scrollbar {
      width: 10px;
    }
    
    ::-webkit-scrollbar-track {
      background: #f1f5f9;
    }
    
    ::-webkit-scrollbar-thumb {
      background: linear-gradient(135deg, var(--primary-color), var(--gold-accent));
      border-radius: 5px;
    }
    
    ::-webkit-scrollbar-thumb:hover {
      background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
    }
    
    /* Premium animations */
    .animate-premium-fade {
      animation: premiumFade 0.8s ease-out;
    }
    
    @keyframes premiumFade {
      from { 
        opacity: 0; 
        transform: translateY(40px) scale(0.95); 
      }
      to { 
        opacity: 1; 
        transform: translateY(0) scale(1); 
      }
    }
    
    .hover-elevate:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
    }
  </style>
  
  {/* Structured Data */}
  {structuredData && (
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
  )}
  
  <!-- ConceptVistos Business Schema -->
  <script type="application/ld+json">
    {
      JSON.stringify({
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": site.name,
        "description": site.description,
        "url": `https://${site.domain}`,
        "logo": `https://${site.domain}${site.logo}`,
        "contactPoint": {
          "@type": "ContactPoint",
          "telephone": site.phone,
          "contactType": "customer service",
          "email": site.contactEmail,
          "availableLanguage": ["Portuguese", "English", "Spanish"]
        },
        "serviceArea": {
          "@type": "Place",
          "name": "Internacional"
        },
        "services": [
          "Consultoria Premium de Vistos",
