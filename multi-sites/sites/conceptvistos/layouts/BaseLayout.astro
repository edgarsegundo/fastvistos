  <meta name="theme-color" content={site.primaryColor} />
  
  <!-- ConceptVistos premium meta -->
  <meta name="contact:email" content={site.contactEmail} />
  <meta name="contact:phone" content={site.phone} />
  <meta name="business:name" content={site.name} />
  <meta name="business:type" content="Premium Visa Consultancy" />
  
  <!-- Preconnect to external domains -->
