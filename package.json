{
  "name": "fastvistos",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    
    "dev:fastvistos": "SITE_ID=fastvistos astro dev --config multi-sites.config.mjs",
    "dev:conceptvistos": "SITE_ID=conceptvistos astro dev --config multi-sites.config.mjs",
    "dev:vibecode": "SITE_ID=vibecode astro dev --config multi-sites.config.mjs",
    
    "sync-blog": "node sync-blog.js",
    
    "build:fastvistos": "node sync-blog.js && SITE_ID=fastvistos astro build --config multi-sites.config.mjs",
    "build:conceptvistos": "node sync-blog.js && SITE_ID=conceptvistos astro build --config multi-sites.config.mjs",
    "build:vibecode": "node sync-blog.js && SITE_ID=vibecode astro build --config multi-sites.config.mjs",
    
    "build:all": "node sync-blog.js && npm run build:fastvistos && npm run build:conceptvistos && npm run build:vibecode",
    
    "preview:fastvistos": "SITE_ID=fastvistos astro preview --config multi-sites.config.mjs",
    "preview:conceptvistos": "SITE_ID=conceptvistos astro preview --config multi-sites.config.mjs",
    "preview:vibecode": "SITE_ID=vibecode astro preview --config multi-sites.config.mjs",
    
    "download-images": "node download-blog-images.js",
    "generate-blog": "node generate-blog-content.js",
    "generate-blog:watch": "node generate-blog-content.js --watch",
    "generate-blog:advanced": "node generate-blog-advanced.js"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.4",
    "@astrojs/sitemap": "^3.5.1",
    "@prisma/client": "^6.15.0",
    "@tailwindcss/vite": "^4.1.13",
    "astro": "^5.13.5",
    "prisma": "^6.15.0",
    "rehype-external-links": "^3.0.0",
    "remark-gfm": "^4.0.1",
    "remark-smartypants": "^3.0.2",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21"
  }
}
